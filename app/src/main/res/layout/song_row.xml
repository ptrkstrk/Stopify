<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/song_row_height"
        android:id="@+id/song_row" android:layout_marginBottom="@dimen/default_margin">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="@dimen/row_image_width"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/default_img"
                android:id="@+id/song_image"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/song_image"
                android:layout_marginStart="@dimen/small_margin"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:padding="@dimen/default_padding"
                    android:text="@string/unknown_title"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:id="@+id/song_title" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/default_margin"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginTop="@dimen/default_margin"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:padding="@dimen/default_padding"
                    android:text="@string/unknown_album"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:id="@+id/album_title"
                    android:textColor="@color/textColorSecondary"
                    android:layout_marginBottom="@dimen/default_margin"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/artist"
                    android:layout_marginStart="@dimen/default_margin" app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:padding="@dimen/default_padding"
                    android:text="@string/unknown_artist"
                    android:id="@+id/artist"
                    app:layout_constraintTop_toBottomOf="@+id/song_title"
                    android:textColor="@color/textColorSecondary"
                    android:layout_marginStart="@dimen/default_margin"
                    app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>